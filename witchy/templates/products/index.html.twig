{% extends "base.html.twig" %}

{% block title %}Produits{% endblock %}

{% block body %}

<div class="container bestSeller">
    <div class="row pt-5 bg-Ardoise">
        {% for produit in produits %}
			<div class="col-lg-3 mb-5 col-md-6">
				<div class="card" data-images="{{ produit.photos|map(p => p.src)|join(',') }}">

					<div class="parentRelatif cardImgSeller">
						<a id="ancre" href="{{ path('app_products_details', {'slug':produit.slug}) }}">

							{% for photo in produit.photos %}

								{% if photo.src[:4] == 'http' %}
									<img src="{{ photo.src }}" alt="{{ produit.shortLibel }}" class="d-block h-100 d-inline-block card-img-top img-fluid w-100 ">

								{% else %}
									<img src="{{ asset('assets/uploads/products/mini/300x300-' ~ photo.src ) }}" alt="{{ produit.shortLibel }}" class="d-block h-100 d-inline-block card-img-top img-fluid w-100 ">

								{% endif %}
							{% endfor %}

						</a>
						<button type="button" class="card-text LargeFont">Add to cauldron</button>
					</div>
					<div class="card-body">
						<div class="font-serif">{{ produit.shortLibel }}</div>
						<div>{{ produit.prxHt }}â‚¬</div>
					</div>
				</div>
			</div>
		{% endfor %}
    </div>
</div>
{% include "_partials/_footer.html.twig" %}
{% endblock %}