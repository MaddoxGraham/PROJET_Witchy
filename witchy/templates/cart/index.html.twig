{% extends 'base.html.twig' %}

{% block title %}
	Your Cart
{% endblock %}

{% block body %}
	<section class="bg-light p-3">
		<h1>Votre panier</h1>
	</section>

	<table class="table text-center">
		<thead>
			<tr>
				<th></th>
				<th>Produit</th>
				<th>Prix</th>
				<th>Quantité</th>

				<th>Actions</th>
			</tr>
		</thead>
		<tbody class="text-center">
			{% for element in dataPanier %}
				<tr>
					<td>{{dump(element)}}
					{% for photo in element.produit  %}je suis la
						{% if photo.isPrimary == true  %}
							
								<img src="{{ photo.src }}" alt="{{ element.produit.shortLibel }}" class="img-fluid ">
						{% endif %}
					{% endfor %}</td>
					<td>{{ element.produit.shortLibel }}</td>
					<td class="">{{ element.quantite * element.produit.prxHt }}
						€</td>
					<td>{{ element.quantite }}</td>

					<td>
						<a href="{{path("app_cart_add", {id: element.produit.id})}}" class="btn btn-success">
							<i class="fa-solid fa-circle-plus"></i>
						</a>
						<a href="{{path("app_cart_remove", {id: element.produit.id})}}" class="btn btn-warning">
							<i class="fa-solid fa-circle-minus"></i>
						</a>
						<a href="{{path("app_cart_delete", {id: element.produit.id})}}" class="btn btn-danger">
							<i class="fa-solid fa-circle-xmark"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5" class="text-center">Votre panier est vide</td>
				</tr>
			{% endfor %}
		</tbody>
		<tfoot>
			<tr>
				<td colspan="3">Total</td>
				<td class="">{{ total }}
					€</td>
				<td>
					<a href="{{path("app_cart_delete_all")}}" class="text-end">
						Delete all
						<i class="fa-solid fa-trash-can"></i>
					</a>
				</td>
			</tr>
		</tfoot>
	</table>


	{% include "_partials/_footer.html.twig" %}

{% endblock %}
